<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragments_list_characters"
    android:background="@drawable/wallpaper"
    tools:context=".ListCharactersFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Incluye el Toolbar -->

        <!-- TÃ­tulo principal de la actividad -->
        <TextView
            android:id="@+id/list_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/list_character"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <!-- RecyclerView para mostrar los personajes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recicleviewPj"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_character" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>